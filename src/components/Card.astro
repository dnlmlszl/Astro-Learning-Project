---
export interface Props {
    dark?: boolean
}

const { title, body, dark = false } = Astro.props
---

<div class={`card ${dark && "dark"}`}>
    <slot />
</div>

<style>
    .card {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .dark {
        background-color: var(--color-primary);
        color: #fff;
    }
</style>